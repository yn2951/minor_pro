<div class="new-users-wrapper">
  <div class="container">
    <div class="row">
      <%= form_for @user do |f| %>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :ユーザーネーム %>
          <%= f.text_area :name, class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :メールアドレス %>
          <%= f.text_area :email, class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :パスワード確認 %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <%= f.submit '登録する', class: 'btn btn-default col-md-2 col-md-offset-5' %>
      <% end %>
    </div>
  </div>
</div>
