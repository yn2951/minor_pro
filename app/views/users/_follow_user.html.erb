<% @follow_users.each do |follow_user| %>
  <div class="row col-md-6 col-md-offset-3 topic-unit">
    <div class="pull-left col-md-6">
      <%= image_tag follow_user.profile.image.url, class: 'img-responsive' %>
    </div>
    <div class="pull-left col-md-6">
      <div>
        <%= link_to users_path(id: follow_user.id) do %>
            <%= follow_user.name %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
