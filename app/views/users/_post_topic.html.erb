<% @post_topics.each do |post_topic| %>
  <div class="row col-md-6 col-md-offset-3 topic-unit">
    <div class="pull-left col-md-6">
      <%= image_tag post_topic.image.url, class: 'img-responsive' %>
    </div>
    <div class="pull-left col-md-6">
      <div>
        <%= link_to detail_path(id: post_topic.id) do %>
            <%= post_topic.title %>
        <% end %>
      </div>
      <div>
        いいね！ <span id="count_goods_<%= post_topic.id %>"><%= post_topic.good_users.count %></span>　|　マイナー！ <span id="count_minors_<%= post_topic.id %>"><%= post_topic.minor_users.count %></span>
      </div>
    </div>
  </div>
<% end %>
