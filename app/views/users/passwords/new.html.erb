<div class="login-wrapper">
  <div class="container">
    <div class="row">
      <h3 class="col-md-6 col-md-offset-3 text-center login-head">パスワードを忘れた方</h3>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <%= f.submit 'メールを受け取る', class: 'btn btn-default col-xs-6 col-xs-offset-3 col-md-2 col-md-offset-5' %>
      <% end %>
    </div>
  </div>
</div>
