<div class="login-wrapper">
  <div class="container">
    <div class="row">
      <h3 class="col-md-6 col-md-offset-3 text-center login-head">ログイン</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field col-md-6 col-md-offset-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <%= f.submit 'ログインする', class: 'btn btn-default col-xs-4 col-xs-offset-4 col-md-2 col-md-offset-5' %>
      <% end %>
    </div>
    <div class="sub">
      <div class="new-user">
        <%= link_to '新規登録する', new_user_registration_path %>
      </div>
      <div class="new-user">
        <%= link_to 'パスワードを忘れた方', new_user_password_path %>
      </div>
      <div class="twitter">
        <i class="fab fa-twitter"></i>
        <%= link_to 'Twitterでログインする', user_twitter_omniauth_authorize_path %>
      </div>
    </div>
  </div>
</div>
