<div class="new-users-wrapper">
  <div class="container">
    <div class="row">
      <h3 class="col-md-6 col-md-offset-3 text-center resisteration-head">ユーザー登録</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div>
          <%= devise_error_messages! %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :ユーザーネーム %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(半角英数字をそれぞれ1種類以上含む8文字以上32文字以下)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :パスワード確認 %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <%= f.submit '登録する', class: 'btn btn-default col-xs-4 col-xs-offset-4 col-md-2 col-md-offset-5' %>
      <% end %>
    </div>
    <div class="sub">
      <div class="twitter">
        <i class="fab fa-twitter"></i>
        <%= link_to 'Twitterで登録する', user_twitter_omniauth_authorize_path %>
      </div>
    </div>
  </div>
</div>
