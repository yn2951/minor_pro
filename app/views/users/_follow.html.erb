<% if !user.follows.where(follower_id: current_user.id).present? %>
  <%= link_to follows_path(user_id: user.id), method: :post, remote: true do %>
    <i class="far fa-thumbs-up"></i>
  <% end %>
<% else %>
  <%= link_to follows_path(user_id: user.id), method: :delete, remote: true do %>
    <i class="fas fa-thumbs-up"></i>
  <% end %>
<% end %>
