<div class="index-topics-wrapper">
  <div class="container">
    <div class="row search-contents">
      <div class="col-xs-6 col-md-2 col-md-offset-1">
        <%= render partial: "topics/category" %>
      </div>
      <div class="col-xs-6 col-md-2">
        <%= render partial: "topics/genre" %>
      </div>
      <div class="col-xs-6 col-md-4">
        <%= render partial: "topics/search" %>
      </div>
      <div class="col-xs-6 col-md-2 dropdown">
        <%= render partial: "topics/sort" %>
      </div>
    </div>
    <div class="row rises-wrapper">
      <div class="col-md-10 col-md-offset-1 rises-contents">
        <h3 class="head">急上昇トピック</h3>
        <div class="row">
          <%= render partial: "topics/rise" %>
        </div>
      </div>
    </div>
    <div class="row topics-wrapper">
      <div class="col-md-10 col-md-offset-1 pages topics-contents">
        <h3 class="head">投稿一覧</h3>
        <div class="row">
          <%= render partial: "topics/page" %>
          <%= paginate @topics %>
        </div>
      </div>
    </div>
  </div>
</div>
