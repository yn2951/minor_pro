<div class="new-topics-wrapper">
  <div class="container">
    <div class="row">
      <%= form_for @topic do |f| %>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :カテゴリー %>
          <%= f.select :category, Topic.categories.keys.map { |k| [Topic.categories_i18n[k], k]}, class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :タイトル %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :イメージ %>
          <%= f.file_field :image %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :説明 %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <%= f.submit '投稿する', class: 'btn btn-default col-md-2 col-md-offset-5' %>
      <% end %>
    </div>
  </div>
</div>
