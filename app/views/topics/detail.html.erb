<div class="detail-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <p>by <%= @topic.user.name %></p>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <% if !@topic.good_users.include?(current_user) %>
          <%= link_to goods_path(topic_id: @topic.id), method: :post do %>
            <i class="far fa-thumbs-up"></i>
          <% end %>
        <% else %>
          <%= link_to goods_path(topic_id: @topic.id), method: :delete do %>
            <i class="fas fa-thumbs-up"></i>
          <% end %>
        <% end %>
        <% if !@topic.minor_users.include?(current_user) %>
          <%= link_to minors_path(topic_id: @topic.id), method: :post do %>
            <i class="far fa-gem"></i>
          <% end %>
        <% else %>
          <%= link_to minors_path(topic_id: @topic.id), method: :delete do %>
            <i class="fas fa-gem"></i>
          <% end %>
        <% end %>
        <% if !@topic.bookmark_users.include?(current_user) %>
          <%= link_to bookmarks_path(topic_id: @topic.id), method: :post do %>
            <i class="far fa-bookmark"></i>
          <% end %>
        <% else %>
          <%= link_to bookmarks_path(topic_id: @topic.id), method: :delete do %>
            <i class="fas fa-bookmark"></i>
          <% end %>
        <% end %>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <%= @topic.title %>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <%= image_tag @topic.image.url, class: 'img-responsive' %>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <%= @topic.description %>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <h2>コメント</h2>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @comment, url: comments_path do |f| %>
          <%= f.hidden_field :topic_id, :value => @topic.id %>
          <%= f.text_field :text %>
          <%= f.submit 'コメントする'%>
        <% end %>
      </div>
      <%= @comments.where(topic_id: @topic.id).each do |comment| %>
        <div class="col-md-6 col-md-offset-3">
          <%= comment.text %>
        </div>
      <% end %>
    </div>
  </div>
</div>
