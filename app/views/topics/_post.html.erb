<div class="new-topics-wrapper">
  <div class="container">
    <div class="row">
      <h3 class="col-md-6 col-md-offset-3 text-center">投稿</h3>

      <%= form_for @topic do |f| %>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :タイトル %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :イメージ %>
          <%= f.file_field :image %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :説明 %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <% if params[:id] %>
          <%= f.submit '編集内容を保存する', class: 'btn btn-default col-md-2 col-md-offset-5' %>
        <% else %>
          <%= f.submit '投稿する', class: 'btn btn-default col-md-2 col-md-offset-5' %>
        <% end %>
      <% end %>

      <% if params[:id] %>
        <%= link_to '投稿を削除する', topics_path(user_id: @topic.user, topic_id: @topic.id), method: :delete, data: {confirm: '投稿を削除しますか？'}, class: 'destroy-topic text-center col-md-2 col-md-offset-5' %>
      <% end %>

    </div>
  </div>
</div>
