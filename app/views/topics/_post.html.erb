<div class="new-topics-wrapper">
  <div class="container">
    <div class="row">
      <h3 class="col-md-6 col-md-offset-3 text-center post-head">投稿</h3>

      <%= form_for @topic do |f| %>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :カテゴリー %>
          <%= f.select :category, Topic.categories_i18n.keys.map { |k| [Topic.categories_i18n[k], k]} %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :ジャンル %>
          <%= f.select :genre, Topic.genres_i18n.keys.map { |k| [Topic.genres_i18n[k], k]} %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :タイトル %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :イメージ %>
          <%= f.file_field :image %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :レビュー %>
          <%= f.text_area :description, class: 'form-control description-form' %>
        </div>

        <% if params[:id] %>
          <%= f.submit '編集内容を保存する', class: 'btn btn-default col-xs-6 col-xs-offset-3 col-md-2 col-md-offset-5' %>
        <% else %>
          <%= f.submit '投稿する', class: 'btn btn-default col-xs-4 col-xs-offset-4 col-md-2 col-md-offset-5' %>
        <% end %>
      <% end %>

      <% if params[:id] %>
        <%= link_to '投稿を削除する', topics_path(id: @topic.id), method: :delete, data: {confirm: '投稿を削除しますか？'}, class: 'destroy-topic text-center col-xs-6 col-xs-offset-3 col-md-2 col-md-offset-5' %>
      <% end %>

    </div>
  </div>
</div>
