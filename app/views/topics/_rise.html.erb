<% @rises.each do |rise| %>
  <div class="topic-unit col-md-3 pull-left">
    <div class="col-md-12 thumbnail-wrapper" >
      <%= image_tag rise.image.url, class: 'img-responsive topic-thumbnail' %>
    </div>
    <div class="col-md-12">
      <div class="title">
        <%= link_to detail_path(id: rise.id) do %>
          <%= rise.title %>
        <% end %>
      </div>
      <div class="name">
        by <%= link_to rise.user.name, users_path(id: rise.user) %>
      </div>
      <div class="evaluation">
        いいね！ <span><%= rise.counter.good_count %></span>　|　マイナー！ <span><%= rise.counter.minor_count %></span>
      </div>
    </div>
  </div>
<% end %>
