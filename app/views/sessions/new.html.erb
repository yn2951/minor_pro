<div class="login-wrapper">
  <div class="container">
    <div class="row">
      <h3 class="col-md-6 col-md-offset-3 text-center">ログイン</h3>

      <%= form_for :session, url: login_path do |f| %>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <%= f.submit 'ログインする', class: 'btn btn-default col-md-2 col-md-offset-5' %>
      <% end %>
    </div>
    <div class="sub">
      <div class="new-user">
        <%= link_to '新規登録する', new_user_path %>
      </div>
      <div class="twitter">
        <i class="fab fa-twitter"></i>
        <%= link_to 'Twitterでログインする', '/auth/twitter' %>
      </div>
    </div>
  </div>
</div>
