<div class="new-users-wrapper">
  <div class="container">
    <div class="row">
      <h3 class="col-md-6 col-md-offset-3 text-center profile-head">プロフィール</h3>

      <%= form_for @profile, url: profiles_update_path do |f| %>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :アイコン %>
          <%= f.file_field :image %>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :プロフィール %>
          <%= f.text_area :introduce, class: 'form-control description-form' %>
        </div>

        <%= f.submit '編集内容を保存する', class: 'btn btn-default col-xs-6 col-xs-offset-3 col-md-2 col-md-offset-5' %>
      <% end %>
    </div>
  </div>
</div>
